{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "esnext",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        // this enables to built .d.ts file
        "declaration": true,
        "paths": {
            "root/*": ["./src/*"],
            "components/*": ["./src/components/*"],
            "utils/*": ["./src/utils/*"],
            "styles/*": ["./src/styles/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "./typings/**/*",
        "./src/**/*",
    ]
}
